extends layout

block content
 h2 Sitios
  #banner.page-header
  h4=message
   a(href='../add_location') (agregar sitio)
   - var i = 1;
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each location in locations 
          .col-xs-12.list-group-item
            h4=i++
            h4=location.name 
              small &nbsp;
              - var id = location._id;
            a(href='../remove_location/' + id) Eliminar-   
            
          
