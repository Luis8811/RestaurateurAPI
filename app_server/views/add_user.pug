extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Agregar usuario
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action='', method='post', role='form')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="user") Usuario
          .col-xs-12.col-sm-10
            input#name.form-control(name="user", placeholder="usuario" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="password") Clave
          .col-xs-12.col-sm-10
            input#name.form-control(name="password", placeholder="clave" type="password"  required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="type") Tipo
          .col-xs-12.col-sm-10
            select#name.form-control(name="type", placeholder="Seleccione un tipo")
             option(value="m" selected) Administrador
             option(value="w") Camarero
        button.btn.btn-default.pull-right Agregar usuario
    .col-xs-12.col-md-4